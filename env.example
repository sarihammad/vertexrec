# VertexRec Environment Configuration
# Copy this file to .env and update with your values

# Google Cloud Configuration
PROJECT_ID=your-gcp-project-id
REGION=us-central1
ZONE=us-central1-a
BUCKET_NAME=vertexrec-data-your-gcp-project-id

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# Model Configuration
MODEL_NAME=vertexrec-model
MODEL_VERSION=latest
ENDPOINT_NAME=vertexrec-endpoint

# Feature Store Configuration
FEATURE_STORE_ID=vertexrec-feature-store
USER_FEATURE_VIEW_ID=user-features
ITEM_FEATURE_VIEW_ID=item-features
INTERACTION_FEATURE_VIEW_ID=interaction-features

# BigQuery Configuration
DATASET_ID=vertexrec_dataset
USERS_TABLE=users
ITEMS_TABLE=items
INTERACTIONS_TABLE=interactions

# Monitoring Configuration
MONITORING_PROJECT_ID=your-gcp-project-id
ALERT_EMAIL=your-email@example.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Model Training Configuration
TRAINING_DATA_PATH=gs://vertexrec-data-your-gcp-project-id/data/interactions.csv
VALIDATION_SPLIT=0.2
TEST_SPLIT=0.1
BATCH_SIZE=1024
EPOCHS=10
LEARNING_RATE=0.001

# Serving Configuration
MAX_RECOMMENDATIONS=100
DEFAULT_RECOMMENDATIONS=10
CACHE_TTL=3600
TIMEOUT_SECONDS=30

# Security Configuration
CORS_ORIGINS=["http://localhost:3000", "https://your-domain.com"]
API_KEY=your-secret-api-key
JWT_SECRET=your-jwt-secret-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_STRUCTURED_LOGGING=true

# Development Configuration
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_TRACING=true
